#/data/data/com.termux/files/usr/bin/bash

pkg install ruby -y

gem install lolcat

pkg install figlet -y |lolcat

echo 'command_not_found_handle() {
	/data/data/com.termux/files/usr/libexec/termux/command-not-found "$1"
}' >> bash.bashrc
 
echo 'Enter Your LOGO Name' |lolcat

read logo

echo "PS1='$logo@EasyMux \\$ ' " >> bash.bashrc

echo "figlet $logo |lolcat -a" >> bash.bashrc

echo 'echo "Script Created by : Viliyam Vasava" |lolcat' >> bash.bashrc

echo "Type msfconsole to Strat Metasploit-Framework |lolcat" >> bash.bashrc
echo "Type msfvenom to Generate |lolcat" >> bash.bashrc
echo "Type easymux to learn more with EAsyMux |lolcat" >> bash.bashrc

rm $PREFIX/etc/bash.bashrc
rm $PREFIX/etc/motd

mv bash.bashrc $PREFIX/etc/

clear

echo 'Congratulations setup is done...' |lolcat

echo 'Now close termux session and reopen ' |lolcat

echo 'Type exit and press enter' |lolcat



