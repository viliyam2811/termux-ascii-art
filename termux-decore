#!/data/data/com.termux/files/usr/bin/bash

termux-setup-storage

sleep 3

pkg install ruby -y
echo "Preparing..."
gem install lolcat

pkg install figlet -y |lolcat

cd ~/

echo 'command_not_found_handle() {
	/data/data/com.termux/files/usr/libexec/termux/command-not-found "$1"
}' >> bash.bashrc
 
echo 'Enter Your Name : ' |lolcat

read logo

echo "PS1='$logo@EasyMux \\$ ' " >> bash.bashrc

echo "figlet $logo |lolcat" >> bash.bashrc

echo 'echo "Script Created by : Viliyam Vasava" |lolcat -a' >> bash.bashrc
echo 'echo ""' >> bash.bashrc
echo 'echo "COMMANDS		: DESCRIPTIONS"' >> bash.bashrc
[ -d ~/metasploit-framework ] && echo 'echo "msfconsole		: Start Metasploit."' >> bash.bashrc
[ -d ~/metasploit-framework ] && echo 'echo "msfvenom		: Create Payload."' >> bash.bashrcc
[ -d ~/metasploit-framework ] && echo 'echo "payload		: Create Payload."' >> bash.bashrcc
[ -d ~/metasploit-framework ] && echo 'echo "fix-nokogiri	: Fix nokogiri error if encountered."' >> bash.bashrc
echo 'echo ""' >> bash.bashrc
echo 'echo "easymux		: Learn more on my YouTube Channel and please subscribe."' >> bash.bashrc


rm $PREFIX/etc/bash.bashrc
echo "" > $PREFIX/etc/motd
rm $PREFIX/etc/motd

mv bash.bashrc $PREFIX/etc/

cd ~/
[ -d ~/termux-metasploit-helper ] && rm -rf ~/termux-metasploit-helper

echo 'Congratulations setup is done...' |lolcat -a

echo 'Now close termux session and reopen ' |lolcat -a

echo 'Type exit and press enter' |lolcat -a



